@model TP3.Models.Cadete
<h3>Ingrese datos del cliente</h3>

<form asp-action="AltaPedidos" class="row g-3 w-50">
    <div class="col-md-4">
        <label for="validationDefault01" class="form-label">Nombre</label>
        <input type="text" name="nombre" class="form-control" id="validationDefault01" value="" required>
    </div>
    <div class="col-md-4">
        <label for="validationDefault02" class="form-label">Direccion</label>
        <input type="text" name="direccion" class="form-control" id="validationDefault02" value="" required>
    </div>
    <div class="col-md-4">
        <label for="validationDefault02" class="form-label">Telefono</label>
        <input type="text" name="telefono" class="form-control" id="validationDefault02" value="" required>
    </div>
    <div class="input-group col-auto mt-2">
        <span class="input-group-text">Observacion</span>
        <textarea class="form-control" name="obs" aria-label="With textarea"></textarea>
    </div>
    <input type="hidden" name="_id" value="@Model.Id">
    <div class="col-12 mt-5">
        <button class="btn btn-primary" type="submit">Hacer Pedido</button>
    </div>
</form>