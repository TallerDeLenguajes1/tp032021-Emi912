@{
}
@model TP3.Models.Cadete

<h1>Pedidos de @Model.Nombre</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id Cliente</th>
            <th scope="col">Cliente</th>
            <th scope="col">Direccion</th>
            <th scope="col">Telefono</th>
            <th scope="col">Estado</th>
            <th scope="col">Observacion</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.ListadoPedidos)
        {

        <tr>
            <td>@item.Cliente.Id</td>
            <td>@item.Cliente.Nombre</td>
            <td>@item.Cliente.Direccion</td>
            <td>@item.Cliente.Telefono</td>
            <td>@item.EstadoPedido</td>
            <td><textarea class="form-control" aria-label="With textarea" readonly>@item.Observacion</textarea></td>
            <td><a asp-controller="Pedido" asp-action="Edit" asp-route-idPedido="@item.Cliente.Id" >Editar</a></td>
            @if (item.EstadoPedido == Estado.Entregado || item.EstadoPedido == Estado.Cancelado)
            {
        <td><a asp-controller="Pedido" asp-action="Delete" asp-route-idPedido="@item.Cliente.Id">Quitar Pedido</a></td>
            }
        </tr>

        }
    </tbody>
</table>